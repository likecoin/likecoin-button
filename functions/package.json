{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint *.js",
    "clean": "rimraf 'dist/functions'",
    "build": "BABEL_ENV=production babel . --out-dir 'dist' --ignore 'nuxt,node_modules,dist'",
    "deps:copy": "cp -r nuxt.config.js package.json package-lock.json nuxt dist/",
    "deps:install": "cd 'dist' && npm install --production",
    "package": "npm run clean && npm run build && npm run deps:copy && npm run deps:install"
  },
  "dependencies": {
    "@likecoin/nuxt-google-optimize": "^0.5.3-like.7",
    "@likecoin/ui-vue": "^0.6.0",
    "@nuxtjs/google-tag-manager": "^2.1.1",
    "@nuxtjs/sentry": "^2.1.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.4",
    "lodash": "^4.17.10",
    "lodash.debounce": "^4.0.8",
    "nuxt": "^2.2.0",
    "vue": "^2.5.17",
    "vue-i18n": "^8.0.0",
    "vue-meta": "^1.5.5",
    "vue-recaptcha": "^1.1.1",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.17",
    "vue-simple-svg": "^1.3.2",
    "vue-template-compiler": "^2.5.17",
    "vuetify": "^1.0.19",
    "vuex": "^3.0.1",
    "webpack": "^4.23.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-preset-minify": "^0.4.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-promise": "^4.0.0"
  },
  "private": true
}
